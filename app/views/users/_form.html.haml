= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this admin from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  - else
    %fieldset
      %div
        = f.label :login, "Username / Email"
        = f.text_field :email, :autofocus => true, :size => 60

      %div
        = f.label :password
        = f.password_field :password, :size => 60

  .actions
    = f.submit 'Save'